#include <stdio.h>

int main() {
    float base, height, area;

    printf("Введіть довжину основи трикутника: ");
    scanf("%f", &base);

    printf("Введіть довжину сторони, опущеної на основу: ");
    scanf("%f", &height);

    area = 0.5 * base * height;

    printf("Площа трикутника становить: %f\n", area);

    return 0;
}
